@{
    ViewData["Title"] = "Inicializar Juego";
}

<div class="container">
    <h1>Configurar Juego</h1>

    <!-- Mostrar categorías -->
    <div class="form-group">
        <label for="categoria">Selecciona la categoría:</label>
        <select id="categoria" name="categoria" class="form-control" required>
            @foreach (var categoria in ViewBag.Categorias)
            {
                <option value="@categoria.Id">@categoria.Nombre</option>
            }
        </select>
    </div>

    <!-- Mostrar dificultades -->
    <div class="form-group">
        <label for="dificultad">Selecciona la dificultad:</label>
        <select id="dificultad" name="dificultad" class="form-control" required>
            @foreach (var dificultad in ViewBag.Dificultades)
            {
                <option value="@dificultad.Id">@dificultad.Nombre</option>
            }
        </select>
    </div>

    <!-- Formulario para iniciar el juego -->
    <form method="post" action='@Url.Action("IniciarJuego", "Home")'>
        <div class="form-group">
            <label for="username">Nombre de Usuario:</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Iniciar Juego</button>
    </form>
</div>
